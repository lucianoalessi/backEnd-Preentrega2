<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-12">
            <h2 class="text-center text-primary display-4">
                <i class="bi bi-cart-fill"></i> Carrito de Compras
            </h2>
            <p class="text-center lead">ID del Carrito: <span id='cart-id'>{{cart._id}}</span></p>
        </div>
    </div>
    <div class="row mt-4">
        <div class="col-12">
            <h3 class="text-primary display-5">
                <i class="bi bi-basket-fill"></i> Productos en el Carrito:
            </h3>
            {{#each cartDetail}}
                <div class='card mb-3 shadow-sm'>
                    <div class='row no-gutters'>
                        <div class='col-md-4'>
                            <img src="{{this.thumbnail}}" class="card-img-top" alt="{{this.title}}" style="object-fit: contain; height: 200px;">
                        </div>
                        <div class='col-md-8'>
                            <div class='card-body'>
                                <h5 class='card-title'>{{this.title}}</h5>
                                <p>ID del Producto: <span class='text-info' id="product-id">{{this._id}}</span></p>
                                <p>Precio Unitario: <span class='text-info'>{{this.price}}</span></p>
                                <p>Cantidad: <span class='text-info'>{{this.quantity}}</span></p>
                                <input type="number" id="quantityInput" name="newQuantity" min="1" value="{{this.quantity}}" data-productId="{{this._id}}" data-cartId="{{../cart._id}}" class="form-control">
                                <button class='btn btn-danger delete-product mt-2' data-product-id='{{this._id}}'>
                                    <i class="bi bi-trash-fill"></i> Eliminar Producto
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            {{/each}}           
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-12">
            <h3 class="text-success display-5">Total: {{totalPrice}} USD </h3>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-12">
            <button id="empty-cart" class='btn btn-danger btn-lg'>
                <i class="bi bi-cart-x-fill"></i> Vaciar Carrito
            </button>
            <form action="/api/carts/{{cart._id}}/purchase" method="get" class='d-inline-block ml-2'>
                <button class='btn btn-success btn-lg'>
                    <i class="bi bi-cash-coin"></i> Confirmar Compra
                </button>
            </form>
            <form action="/products" method="get" class='d-inline-block ml-2'>
                <button class='btn btn-primary btn-lg'>
                    <i class="bi bi-arrow-left-circle"></i> Continuar Comprando
                </button>
            </form>
        </div>
    </div>
</div>
<script src="/static/js/cart.js"></script>

<style>
body {
    background: linear-gradient(to bottom left, #800080 0%, black 30%, #000080 100%);
    color: white;
    font-family: 'Roboto', sans-serif;
}

