    max-width: 960px;
    margin: auto;
    padding: 20px;
}

.card {
    height: 200px; /* Set the height of the card */
    margin: 20px auto; /* Center the card */
    border-radius: 10px;
    overflow: hidden;
    transition: transform .2s;
    box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
}

.card:hover {
    transform: scale(1.02);
    box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2);
}

.card-img {
    height: 100%; /* Make the image fill the card */
    object-fit: cover;
}

.card-body {
    padding: 20px;
    overflow: auto; /* Add scroll if the content is too big */
}

.card-title {
    font-size: 1.5em;
    color: #28a745;
    font-weight: bold;
}

.btn {
    border: none;
    border-radius: 50px;
    padding: 10px 20px;
    transition: background-color .2s, transform .2s;
    margin: 10px;
}

.btn:hover {
    background-color: #28a745;
    color: white;
    transform: scale(1.1);
}

.text-primary {
    color: #28a745;
}

.text-success {
    color: #28a745;
    font-size: 2em;
}

.btn-group {
    display: flex;
    justify-content: center;
    margin-top: 20px;
}
</style>


